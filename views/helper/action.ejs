<% 
    actionHelper = (collection) => { 
        let actions = [
            { value: "", name: "Bulk Action" },
            { value: "change-price", name: "Change Price" },
            { value: "delete", name: "Delete" },
            { value: "change-name", name: "Change Name" },
        ];
        let xhtmlAction = '';
        let linkAddNew  =  '/' + collection + '/add/form' ;

        actions.forEach((action)=> {
            let link = '/' + collection + '/' + action.value;
            xhtmlAction += `<option value="${link}">${action.name}</option>`;
        });

        return `<div class="zcontrols">
                    <select name="action" class="form-control slbAction">
                        ${xhtmlAction}
                    </select>
                    <button type="submit" class="btn btn-info btnAction" type="button" id="btn-action" value="btnAction">Apply</button>
                    <div class="pull-right">
                        <a href="${linkAddNew}" class="btn btn-warning btn-addNew">Add New</a>
                    </div>
                </div>`;
    } 
%>






